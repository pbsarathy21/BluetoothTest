<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="">

    </TextView>

    <Button
        android:id="@+id/turn_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="49dp"
        android:onClick="isOnClicked"
        android:text="TURN_ON" />

    <Button
        android:id="@+id/discoverable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/turn_on"
        android:layout_below="@+id/turn_on"
        android:layout_marginTop="27dp"
        android:onClick="isDiscoverableClicked"
        android:text="DISCOVERABLE" />

    <Button
        android:id="@+id/turn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/discoverable"
        android:layout_below="@+id/discoverable"
        android:layout_marginTop="28dp"
        android:onClick="isOffClicked"
        android:text="TURN_OFF" />

    <TextView
        android:id="@+id/paired_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paired Devices"
        android:layout_below="@id/turn_off"
        android:layout_alignLeft="@+id/turn_off"
        android:layout_marginTop="30dp"/>

</RelativeLayout>